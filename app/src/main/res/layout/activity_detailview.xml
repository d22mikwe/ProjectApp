<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailViewActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textViewPopularityInput"
        android:layout_width="231dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="25dp"
        android:textSize="20dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewPopularity"
        app:layout_constraintTop_toBottomOf="@+id/textViewTypeInput" />

    <TextView
        android:id="@+id/textViewTypeInput"
        android:layout_width="231dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="25dp"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewPopularityInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewType"
        app:layout_constraintTop_toBottomOf="@+id/textViewCostInput" />

    <TextView
        android:id="@+id/textViewPopularity"
        android:layout_width="128dp"
        android:layout_height="54dp"
        android:layout_marginStart="7dp"
        android:layout_marginBottom="27dp"
        android:background="@color/textViewBreed"
        android:text="POPULARITY:"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/textViewInfo"
        app:layout_constraintEnd_toStartOf="@+id/textViewPopularityInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewType" />

    <TextView
        android:id="@+id/textViewType"
        android:layout_width="128dp"
        android:layout_height="54dp"
        android:layout_marginStart="7dp"
        android:layout_marginBottom="19dp"
        android:background="@color/textViewBreed"
        android:text="TYPE:"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/textViewPopularity"
        app:layout_constraintEnd_toStartOf="@+id/textViewTypeInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCost" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="77dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="107dp"
        android:layout_marginEnd="318dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewInfo"
        app:srcCompat="?attr/actionModeCloseDrawable" />

    <TextView
        android:id="@+id/textViewBreed"
        android:layout_width="408dp"
        android:layout_height="71dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="2dp"
        android:background="@color/textViewBreed"
        android:text="TextView"
        android:textSize="45dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewInfo"
        android:layout_width="408dp"
        android:layout_height="250dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="173dp"
        android:layout_marginEnd="2dp"
        android:background="@color/textViewBreed"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCost" />

    <TextView
        android:id="@+id/textViewCost"
        android:layout_width="128dp"
        android:layout_height="54dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="19dp"
        android:background="@color/textViewBreed"
        android:text="COST:"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/textViewType"
        app:layout_constraintEnd_toStartOf="@+id/textViewCostInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewBreed" />

    <TextView
        android:id="@+id/textViewCostInput"
        android:layout_width="231dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="17dp"
        android:textSize="20dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewTypeInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewCost"
        app:layout_constraintTop_toBottomOf="@+id/textViewBreed" />

</androidx.constraintlayout.widget.ConstraintLayout>